{
	"name": "__MSG_addon_name__",
	"description": "__MSG_addon_desc__",
	"version": "1.0",
	"default_locale": "en-US",
	"homepage_url": "https://github.com/Noitidart/Trigger/",
	"icons": {
		"16": "images/icon.svg",
		"48": "images/icon.svg",
		"64": "images/icon.svg",
		"96": "images/icon.svg",
		"128": "images/icon.svg"
	},

	"manifest_version": 2,
	"applications": {
		"gecko": {
			"id": "@trigger",
			"strict_min_version": "51.0"
		}
	},

	"incognito": "spanning",
	"permissions": [
		"<all_urls>",
		"activeTab",
		"alarms",
		"bookmarks",
		"contextMenus",
		"cookies",
		"downloads",
		"downloads.open",
		"history",
		"idle",
		"management",
		"nativeMessaging",
		"notifications",
		"sessions",
		"storage",
		"tabs",
		"topSites",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	],

	"background": { "page": "pages/background.html" },

	"browser_action": {
		"default_icon": "images/icon.svg",
		"browser_style": true,
		"default_title": "__MSG_browseraction_title__"
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
